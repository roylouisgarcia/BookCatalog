<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tv_item_margin">
    <TextView
        android:id="@+id/item_tv_title"
        tools:text="@string/item_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"/>
    <TextView
        android:id="@+id/item_tv_monetary_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_tv_text_size"/>

    <TextView
        android:id="@+id/item_tv_price"
        tools:text="@string/item_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_item_margin"/>
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:id="@+id/item_tv_type"
        tools:text="@string/book_type_electronic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_item_margin"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/item_tv_text_size"/>

</LinearLayout>